<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_50"
    android:layout_height="wrap_content"
    android:background="@drawable/barra_clara"
    android:orientation="vertical">
    <TextView
        android:id="@+id/lblInfTecnica"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_1"
        android:gravity="center"
        android:background="@drawable/barra"
        android:text="@string/inf_tecnica_inscripcion_anexo_1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/text_2"
        android:textStyle="bold" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="right|center"
            android:paddingRight="@dimen/margin_1"
            android:background="@drawable/barra_clara"
            android:text="@string/descripcion_actividad_ficha"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_1"
            android:textStyle="bold" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_texto"
            android:textSize="@dimen/text_2"
            android:typeface="normal"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:lines="2"
            android:textColor="?android:textColorSecondary"
            android:background="@drawable/border_text_1"
            android:id="@+id/txtDescripcion" />

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblCodigo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="right|center"
            android:paddingRight="@dimen/margin_1"
            android:background="@drawable/barra_clara"
            android:text="@string/codigo_actividad_ficha"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_1"
            android:textStyle="bold" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:ems="10"
            android:maxLength="4"
            android:hint="@string/hint_numero"
            android:textSize="@dimen/text_2"
            android:textColor="?android:textColorSecondary"
            android:background="@drawable/border_text_1"
            android:id="@+id/txtCodigo" />

    </LinearLayout>


    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_marginBottom="@dimen/margin_1"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="@dimen/dimen_30"
            android:layout_height="wrap_content"
            android:text="@string/btn_agregar"
            android:gravity="center"
            android:textSize="@dimen/text_3"
            android:textColor="@color/blanco"
            android:background="@drawable/button_grey"
            android:id="@+id/btnAgregar" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/barra_garnet"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lblTitulo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_marginBottom="@dimen/margin_1"
            android:gravity="center"
            android:text="@string/titulo_inscripcion_anexo_1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/text_3"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pager"
    android:layout_weight="0.2"
    android:background="@drawable/barra_clara"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_finalizar"
            android:gravity="center"
            android:textSize="@dimen/text_2"
            android:textColor="?android:textColorTertiary"
            android:background="@drawable/button_grey"
            android:id="@+id/btnAceptar" />
    </LinearLayout>

</LinearLayout>
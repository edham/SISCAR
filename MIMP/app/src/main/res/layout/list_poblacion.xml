<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_1"
    android:layout_marginRight="@dimen/margin_1"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="3">
        <TextView
            android:id="@+id/lblRangoEdad"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingRight="@dimen/margin_1"
            android:background="@drawable/barra_clara"
            android:text="@string/codigo_actividad_ficha"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_2"
            android:textStyle="bold" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            android:hint="@string/hint_texto"
            android:textSize="@dimen/text_2"
            android:textColor="?android:textColorSecondary"
            android:background="@drawable/barra_clara"
            android:id="@+id/txtRangoEdad" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:hint="@string/hint_numero"
            android:textSize="@dimen/text_2"
            android:inputType="number"
            android:ems="10"
            android:textColor="?android:textColorSecondary"
            android:background="@drawable/barra"
            android:id="@+id/txtRangoM" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:hint="@string/hint_numero"
            android:inputType="number"
            android:ems="10"
            android:textSize="@dimen/text_2"
            android:textColor="?android:textColorSecondary"
            android:background="@drawable/barra"
            android:id="@+id/txtRangoF" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/barra_oscura"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lblPagina"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_1"
                android:gravity="right"
                android:text="@string/pagina_ficha"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblTitulo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_1"
                android:gravity="center"
                android:text="@string/titulo_inscripcion_anexo_2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/text_3"
                android:textStyle="bold" />
        </LinearLayout>



        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblNInstitucion"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="@dimen/margin_1"
                android:background="@drawable/barra"
                android:text="@string/nro_bandeja"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblTNombre"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="0.5"
                android:background="@drawable/barra"
                android:text="@string/car_nombre_ficha"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_2"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblTTipo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dimen_5"
                android:background="@drawable/barra"
                android:gravity="center"
                android:layout_weight="0.6"
                android:text="@string/tipo_inscripcion_anexo_1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_2"
                android:textStyle="bold" />




        </LinearLayout>


        <ListView
            android:id="@+id/listInstituciones"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>
</LinearLayout>
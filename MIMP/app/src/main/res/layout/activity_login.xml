<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30">












        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/barra_clara"
            android:orientation="vertical"
            android:layout_below="@+id/viewTitulo"
            >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_6"
                android:background="@drawable/material_background"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:text="@string/app_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:typeface="normal"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:layout_marginBottom="@dimen/dimen_1"
                    android:textSize="@dimen/text_5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="?android:colorBackground" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/baner_2" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_text_1"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_1"
                        android:layout_marginLeft="@dimen/dimen_1"
                        android:layout_marginRight="@dimen/dimen_1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txtUsuario"
                            android:hint="@string/usuario_minp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_1"
                            android:layout_marginRight="@dimen/dimen_1"
                            android:typeface="normal"
                            android:textSize="@dimen/text_2"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:drawableLeft="@drawable/usuario"
                            android:textAppearance="?android:attr/textAppearanceLarge"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_text_1"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_1"
                        android:layout_marginLeft="@dimen/dimen_1"
                        android:layout_marginRight="@dimen/dimen_1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txtClave"
                            android:hint="@string/contrasenna_minp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:typeface="normal"
                            android:layout_marginLeft="@dimen/dimen_1"
                            android:layout_marginRight="@dimen/dimen_1"
                            android:textSize="@dimen/text_2"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:drawableLeft="@drawable/pass"
                            android:textAppearance="?android:attr/textAppearanceLarge"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/dimen_1"
                        android:orientation="vertical"
                        android:background="?colorPrimary"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:weightSum="1"/>


                    <Button
                        android:onClick="btnAceptar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_1"
                        android:layout_marginRight="@dimen/dimen_1"
                        android:layout_marginTop="@dimen/dimen_1"
                        android:layout_marginBottom="@dimen/dimen_1"
                        android:text="@string/btn_aceptar"
                        android:textSize="@dimen/text_3"
                        android:textStyle="bold"
                        android:background="@drawable/button_red"
                        android:textColor="?android:colorBackground" />
                </LinearLayout>

            </LinearLayout>




        </LinearLayout>





    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/lblNObejtivo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:paddingRight="@dimen/margin_1"
            android:background="@drawable/barra_clara"
            android:text="@string/nro_bandeja"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_1"
            android:textStyle="bold" />
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@drawable/barra_clara"
        android:minHeight="@dimen/dimen_5"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblObejtivo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_1"
            android:text="@string/objetivo_inripcion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_1"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@drawable/barra_clara"
        android:minHeight="@dimen/dimen_5"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblActividad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_1"
            android:text="@string/objetivo_inripcion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_1"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@drawable/barra_clara"
        android:minHeight="@dimen/dimen_5"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblMeta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_1"
            android:text="@string/objetivo_inripcion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_1"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@drawable/barra_clara"
        android:minHeight="@dimen/dimen_5"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblCronograma"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_1"
            android:text="@string/objetivo_inripcion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_1"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@drawable/barra_clara"
        android:minHeight="@dimen/dimen_5"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblResponsable"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_1"
            android:text="@string/objetivo_inripcion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_1"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@drawable/barra_clara"
        android:minHeight="@dimen/dimen_5"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_eliminarr"
            android:gravity="center"
            android:textSize="@dimen/text_3"
            android:textColor="?android:textColorTertiary"
            android:background="@drawable/button_grey"
            android:id="@+id/btnEliminar" />
    </LinearLayout>




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_50"
    android:layout_height="wrap_content"
    android:background="@drawable/barra_clara"
    android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent"
        android:id="@+id/viewPoblacion"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="right|center"
            android:paddingRight="@dimen/margin_1"
            android:background="@drawable/barra_clara"
            android:text="@string/descripcion_actividad_ficha"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_1"
            android:textStyle="bold" />
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lblPoblacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/barra"
                android:gravity="center"
                android:text="@string/poblacion_obejetivo_ficha"
                android:paddingLeft="@dimen/margin_1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_2"
                android:textStyle="bold" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_texto"
                android:textSize="@dimen/text_2"
                android:typeface="normal"
                android:inputType="textMultiLine"
                android:gravity="center"
                android:lines="3"
                android:textColor="?android:textColorSecondary"
                android:background="@drawable/barra_clara"
                android:id="@+id/txtPoblacion" />

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/hint_texto"
                    android:textSize="@dimen/text_2"
                    android:textColor="?android:textColorSecondary"
                    android:background="@drawable/barra_clara"
                    android:id="@+id/txtPoblacionCategoria" />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="@string/hint_numero"
                    android:inputType="number"
                    android:ems="10"
                    android:textSize="@dimen/text_2"
                    android:textColor="?android:textColorSecondary"
                    android:background="@drawable/barra"
                    android:id="@+id/txtPoblacionCategoriaDes" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




    <LinearLayout android:layout_width="match_parent"
        android:id="@+id/viewModalidad"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_1"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblTModalidad"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="right|center"
            android:paddingRight="@dimen/margin_1"
            android:background="@drawable/barra_clara"
            android:text="@string/descripcion_actividad_ficha"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_2"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lblModalidad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/barra"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/resolucion_judicial_ficha"
            android:paddingLeft="@dimen/margin_1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_2"
            android:textStyle="bold" />

    </LinearLayout>




    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblRangoEdad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingRight="@dimen/margin_1"
            android:background="@drawable/barra_clara"
            android:text="@string/rango_edad_ficha"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_1"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lblRangoM"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/barra"
                android:gravity="center"
                android:layout_weight="0.7"
                android:text="M"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_2"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblRangoF"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/barra"
                android:gravity="center"
                android:layout_weight="0.7"
                android:text="F"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_2"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/listPoblacion"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_marginBottom="@dimen/margin_1"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="@dimen/dimen_30"
            android:layout_height="wrap_content"
            android:text="@string/btn_aceptar"
            android:gravity="center"
            android:textSize="@dimen/text_3"
            android:textColor="@color/blanco"
            android:background="@drawable/button_grey"
            android:id="@+id/btnAceptar" />
    </LinearLayout>

</LinearLayout>